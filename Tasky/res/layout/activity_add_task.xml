<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AddTaskActivity"
	android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
>
    
    <Button
	    android:id="@+id/addCreateTask"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentTop="true"
	    android:text="Create Task"
	    android:onClick="createTask"
	    />
	
	<Button
	    android:id="@+id/addCancel"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:text="Cancel"
	    android:onClick="cancel"
	    />
    
    <EditText 
        android:id="@+id/addName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_centerHorizontal="true"
        android:hint="Task Name" />
    
    <NumberPicker 
        android:id="@+id/addDueDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addName"
		android:layout_centerHorizontal="true" />
    
	<NumberPicker 
        android:id="@+id/addDueMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addName"
        android:layout_toLeftOf="@id/addDueDay"/>
    
	<NumberPicker 
        android:id="@+id/addDueYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addName"
		android:layout_toRightOf="@id/addDueDay"/> 
	
    <NumberPicker 
        android:id="@+id/addRemindDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addDueDay"
        android:layout_centerHorizontal="true"
	    android:visibility="invisible"/>
    
    <NumberPicker 
        android:id="@+id/addRemindMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addDueMonth"
        android:layout_toLeftOf="@id/addRemindDay"
	    android:visibility="invisible"/>
    
     <NumberPicker 
        android:id="@+id/addRemindYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addDueYear"
        android:layout_toRightOf="@id/addRemindDay"
	    android:visibility="invisible"/>
    
	<TextView
        android:id="@+id/addRemindDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jan. 1 2014"
	    android:layout_alignBottom="@id/addRemindDay"
	    android:layout_toRightOf="@id/addRemindYear"
	    android:layout_marginBottom="80dp"
	    android:visibility="invisible"/>"

	<TextView
	    android:id="@+id/addDueDate"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@id/addDueDay"
	    android:layout_toRightOf="@id/addDueYear"
	    android:layout_marginBottom="80dp" />
	
    <EditText
        android:id="@+id/addDesc"
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addRemindMonth"
        android:layout_centerHorizontal="true"
        android:hint="Task Description"
        android:singleLine="true" />
    
    <TextView 
        android:id="@+id/addWriteDue"
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/addDueMonth"
        android:text="Due Date: "
        android:layout_alignBottom="@id/addDueMonth"
	    android:layout_marginBottom="80dp" />
	
    <CheckBox 
        android:id="@+id/addViewRemind"
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set a reminder?"
        android:onClick="switchReminderView"
        android:layout_toLeftOf="@id/addRemindMonth"
		android:layout_alignBottom="@id/addRemindMonth"
	    android:layout_marginBottom="75dp" />
    
</RelativeLayout>
</ScrollView>
