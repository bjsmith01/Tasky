<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".EditTaskActivity"
	android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
>
    <Button
	    android:id="@+id/editCreateTask"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentTop="true"
	    android:text="Save Changes"
	    android:onClick="acceptClick"
	    />
	
	<Button
	    android:id="@+id/editCancel"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:text="Go Back"
	    android:onClick="cancelClick"
	    />
    
    <EditText 
        android:id="@+id/editName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_centerHorizontal="true"
        android:hint="Task Name" />
    
    <NumberPicker 
        android:id="@+id/editDueDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editName"
		android:layout_centerHorizontal="true" />
    
	<NumberPicker 
        android:id="@+id/editDueMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editName"
        android:layout_toLeftOf="@id/editDueDay"/>
    
	<NumberPicker 
        android:id="@+id/editDueYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editName"
		android:layout_toRightOf="@id/editDueDay"/> 
	
    <NumberPicker 
        android:id="@+id/editRemindDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editDueDay"
        android:layout_centerHorizontal="true"
	    android:visibility="invisible"/>
    
    <NumberPicker 
        android:id="@+id/editRemindMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editDueMonth"
        android:layout_toLeftOf="@id/editRemindDay"
	    android:visibility="invisible"/>
    
     <NumberPicker 
        android:id="@+id/editRemindYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editDueYear"
        android:layout_toRightOf="@id/editRemindDay"
	    android:visibility="invisible"/>
    
	<TextView
        android:id="@+id/editRemindDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jan. 1 2014"
	    android:layout_alignBottom="@id/editRemindDay"
	    android:layout_toRightOf="@id/editRemindYear"
	    android:layout_marginBottom="80dp"
	    android:visibility="invisible"/>

	<TextView
	    android:id="@+id/editDueDate"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@id/editDueDay"
	    android:layout_toRightOf="@id/editDueYear"
	    android:layout_marginBottom="80dp" />
	
    <EditText
        android:id="@+id/editDesc"
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editRemindMonth"
        android:layout_centerHorizontal="true"
        android:hint="Task Description"
        android:singleLine="true" />
    
    <TextView 
        android:id="@+id/editWriteDue"
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/editDueMonth"
        android:text="Due Date: "
        android:layout_alignBottom="@id/editDueMonth"
	    android:layout_marginBottom="80dp" />
	
    <CheckBox 
        android:id="@+id/editViewRemind"
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set a reminder?"
        android:onClick="switchReminderView"
        android:layout_toLeftOf="@id/editRemindMonth"
		android:layout_alignBottom="@id/editRemindMonth"
	    android:layout_marginBottom="75dp" />
    
</RelativeLayout>
</ScrollView>
